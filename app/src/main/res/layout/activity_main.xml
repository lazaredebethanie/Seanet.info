<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff5a35"
        android:id="@+id/lAlertNotConnected"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvNotConnected"
            android:text="Not connected"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textStyle="bold|italic"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="You cannot save your datas on server."
            android:id="@+id/textView28"
            android:layout_gravity="center_horizontal"
            android:textColor="#ddafaf"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|fill"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="0dp"
        android:nestedScrollingEnabled="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iBtnMarinas"
            android:src="@mipmap/ic_harbor"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_marinas"
            android:id="@+id/textView"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/abc_text_size_large_material" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|fill"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iBtnLogBook"
            android:src="@mipmap/ic_seafaring"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:baselineAlignBottom="false"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_logbook"
            android:id="@+id/textView2"
            android:textSize="@dimen/abc_text_size_large_material"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|fill"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iBtnHelping"
            android:src="@mipmap/ic_helping"
            android:scaleType="centerCrop"
            style="@style/Base.Widget.AppCompat.Button.Borderless" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_helping_hand"
            android:id="@+id/textView3"
            android:textSize="@dimen/abc_text_size_large_material"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@mipmap/ic_users"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:scaleType="centerCrop"
            android:onClick="onSpecial" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_user_profile"
            android:id="@+id/textView5"
            android:textSize="@dimen/abc_text_size_large_material"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iBtnLogout"
            android:src="@mipmap/ic_exit"
            android:scaleType="centerCrop"
            style="@style/Base.Widget.AppCompat.Button.Borderless" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/textView4"
            android:textSize="@dimen/abc_text_size_large_material"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>